<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_pick_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/pick_your_category_of_interest"
            android:textColor="@color/grey"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="30dp"/>

        <ImageView
            android:id="@+id/imv_sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sports"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pick_category"
            />

        <ImageView
            android:id="@+id/imv_politics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/politics"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pick_category"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"/>

        <ImageView
            android:id="@+id/imv_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/health"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imv_sports"
            />

        <ImageView
            android:id="@+id/imv_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/business"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imv_politics"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"/>

        <ImageView
            android:id="@+id/imv_environment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/environment"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imv_health"
            />

        <ImageView
            android:id="@+id/imv_science"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/science"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imv_business"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>